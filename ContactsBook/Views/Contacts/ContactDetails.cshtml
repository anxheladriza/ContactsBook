@model ContactsBook.Models.Contact

@{
    ViewBag.Title = "Contact Details";
}

<h2>@Html.DisplayFor(model => model.FirstName)  @Html.DisplayFor(model => model.LastName)</h2>
<br />
<br />

@*tabela e Email*@
@if (Convert.ToBoolean(Session["IsAdmin"]) == true)
{
    <h5>@Html.ActionLink("Add New Email", "AddEmail", new { contactId = Model.Id })</h5>
}
<table class="table table-bordered">
    <tr>
        <th>
            Email Addresses
        </th>
        @if (Convert.ToBoolean(Session["IsAdmin"]) == true)
        {
            <th>Options</th>
        }
    </tr>

    @foreach (var email in Model.Emails)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => email.EmailAddress)
            </td>
            @if (Convert.ToBoolean(Session["IsAdmin"]) == true)
            {
                <td>
                    @Html.ActionLink("Edit", "EditEmail", new { id = email.Id }) |
                    @Html.ActionLink("Delete", "DeleteEmail", new { id = email.Id })
                </td>
            }

        </tr>
    }

</table>
