@*tabela e adresave*@
@if (Convert.ToBoolean(Session["IsAdmin"]) == true)
{
    <h5>@Html.ActionLink("Add New Address", "CreateAddress", new { contactId = Model.Id })</h5>
}
<table class="table table-bordered">
    <tr>
        <th>
            Country
        </th>
        <th>City  </th>
        <th>Street </th>
        @if (Convert.ToBoolean(Session["IsAdmin"]) == true)
        {
            <th> Options</th>
        }
    </tr>
    @foreach (var address in Model.Addresses)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => address.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => address.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => address.StreetAddress)
            </td>
            @if (Convert.ToBoolean(Session["IsAdmin"]) == true)
            {
                <td>
                    @Html.ActionLink("Edit", "EditAddress", new { id = address.Id }) |
                    @Html.ActionLink("Delete", "DeleteAddress", new { id = address.Id })
                </td>
            }
        </tr>
    }

</table>

