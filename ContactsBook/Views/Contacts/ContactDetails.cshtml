@*Tabele e Numrave*@
@if (Convert.ToBoolean(Session["IsAdmin"]) == true)
{
    <h5>@Html.ActionLink("Add New Number", "AddPhoneNumber", new { contactId = Model.Id })</h5>
}
<table class="table table-bordered">
    <tr>
        <th>
            Phone Numbers
        </th>
        @if (Convert.ToBoolean(Session["IsAdmin"]) == true)
        {
            <th>Options</th>
        }

    </tr>

    @foreach (var number in Model.PhoneNumbers)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => number.Number)

            </td>
            @if (Convert.ToBoolean(Session["IsAdmin"]) == true)
            {

                @Html.ActionLink("Delete", "DeleteAddress", new { id = number.Id })
                <td>

                    @Html.ActionLink("Edit", "EditPhoneNumber", new { id = number.Id }) |
                    @Html.ActionLink("Delete", "DeleteNumber", new { id = number.Id })

                </td>
            }
        </tr>
    }

</table>
